<h1>课程列表</h1>
 
<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th colspan="3"></th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.desc %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Delete', course_path(course),method: :delete,data:{confirm:'Are You Sure?'} %></td>
  <% end %>
</table>
<%= link_to '新建', new_course_path %>