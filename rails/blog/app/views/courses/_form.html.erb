<%= form_for @course do |f| %>
  <p>
    <%= f.label "标签" %><br>
    <%= f.text_field :tag %>
  </p>
 
  <p>
    <%= f.label "标题" %><br>
    <%= f.text_area :title %>
  </p>
  <p>
    <%= f.label "子标题" %><br>
    <%= f.text_area :sub_title %>
  </p>
  <p>
    <%= f.label "描述" %><br>
    <%= f.text_area :desc %>
  </p>
  <p>
    <%= f.label "选择讲师" %><br>
    <% Lecturer.all.each do |lecturer| %>  
      <%#= check_box_tag 'lecturers[]', lecturer.id %>  
      <%= check_box_tag 'lecturer', lecturer.id %>  
      <%= label_tag lecturer.name %>  
    <% end %>  
  </p>
  <p>
    <%= f.submit "完成"%>
  </p>
<% end %>