<% content_for :css do %>
<% end %>
<% content_for :html do %>
  <div class="container-fluid bg-light" style="height:100%">
  <div class="center-vertical container shadow-lg p-3 mb-5 bg-white rounded" style="padding:50px;width:600px">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-label-group">
      <%= f.email_field :email, autofocus: true, placeholder: "请输入邮箱", autocomplete: "email", class:"form-control ds-input" %>
    </div>

    <div class="field form-label-group">
      <%= f.password_field :password, placeholder: "请输入密码(最少#{@minimum_password_length}位字符)", autocomplete: "off", class:"form-control ds-input" %>
    </div>

    <div class="field form-label-group">
      <%= f.password_field :password_confirmation, placeholder: "请确认密码", autocomplete: "off", class:"form-control ds-input" %>
    </div>

    <div class="actions text-center form-label-group">
      <%= f.submit "注册", class:"container btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
  </div>
  </div>
<% end %>
<% content_for :js do %>
<% end %>